@* Views/Account/ResetPassword.cshtml - User must change password *@
@model ThesisManager.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "تغيير كلمة المرور";
    Layout = "_Layout";
}

<div class="content-container" style="max-width: 600px; margin-top: 4rem;">
    <div class="info-card" style="border-right-color: var(--warning-orange);">
        <h2 style="color: var(--warning-orange); margin-bottom: 1rem;">
            <i class="fas fa-exclamation-triangle"></i>
            يجب تغيير كلمة المرور
        </h2>
        <p style="color: #6b7280; margin-bottom: 2rem;">
            تم منحك كلمة مرور مؤقتة. للأمان، يجب عليك تغييرها الآن قبل المتابعة.
        </p>

        <form method="post" asp-action="ResetPassword">
            <div class="form-group">
                <label asp-for="CurrentPassword">
                    <i class="fas fa-key"></i>
                    كلمة المرور المؤقتة (التي حصلت عليها من المسؤول)
                </label>
                <input class="form-control" asp-for="CurrentPassword" type="password" required autocomplete="off" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">
                    <i class="fas fa-lock"></i>
                    كلمة المرور الجديدة
                </label>
                <input class="form-control" asp-for="NewPassword" type="password" required />
                <small style="color: #6b7280; display: block; margin-top: 0.5rem;">
                    يجب أن تحتوي على 8 أحرف على الأقل، وتتضمن حروف كبيرة وصغيرة وأرقام
                </small>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">
                    <i class="fas fa-lock"></i>
                    تأكيد كلمة المرور الجديدة
                </label>
                <input class="form-control" asp-for="ConfirmPassword" type="password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div style="background: #fee2e2; border-right: 4px solid #ef4444; padding: 1rem; border-radius: 8px; margin-top: 1rem; color: #991b1b;">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewBag.Error
                </div>
            }

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div style="background: #fee2e2; border-right: 4px solid #ef4444; padding: 1rem; border-radius: 8px; margin-top: 1rem; color: #991b1b;">
                    <i class="fas fa-exclamation-circle"></i>
                    الرجاء تصحيح الأخطاء أعلاه
                </div>
            }

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1.5rem; padding: 1rem; font-size: 1.1rem;">
                <i class="fas fa-check-circle"></i>
                تغيير كلمة المرور والمتابعة
            </button>
        </form>

        <div style="background: #f0f9ff; border-right: 4px solid var(--primary-blue); padding: 1rem; border-radius: 8px; margin-top: 2rem;">
            <h4 style="color: var(--primary-blue); margin-bottom: 0.5rem;">
                <i class="fas fa-shield-alt"></i>
                نصائح لكلمة مرور قوية:
            </h4>
            <ul style="color: #1e40af; margin: 0; padding-right: 1.5rem;">
                <li>استخدم على الأقل 8 أحرف</li>
                <li>اجمع بين الحروف الكبيرة والصغيرة</li>
                <li>أضف أرقاماً ورموزاً خاصة</li>
                <li>تجنب استخدام معلومات شخصية واضحة</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}